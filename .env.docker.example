# RPC endpoints (you can provide one or both)
# For free-tier keys it's recommended to use both: Alchemy (faster for tx parsing) + Infura (better for block scanning)
RPC_ALCHEMY=https://eth-mainnet.g.alchemy.com/v2/<your-key>
RPC_INFURA=https://mainnet.infura.io/v3/<your-key>
ADDRESS=0xef4fb24ad0916217251f553c0596f8edc630eb66

# Token
TOKEN_SYMBOL=USDC
TOKEN_DECIMALS=6
CONTRACT=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# Pipeline
# How many token Transfer events to collect before stopping
TARGET_EVENTS=5000
# Block range size for each eth_getLogs request
BLOCK_STEP=100
# Number of tx hashes to enrich in one batch (for receipts + blocks)
BATCH_SIZE=50
# Max concurrent RPC calls (used in both transfers and enrichment)
RPC_CONCURRENCY=5

# ClickHouse
CLICKHOUSE_PROTOCOL=http
# For local run use CLICKHOUSE_HOST=localhost or "make dev-run" command
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=analytics_user
CLICKHOUSE_PASSWORD=debridge

# Temporal
# For local run use TEMPORAL_ADDRESS=localhost:7233 or "make dev-run" command
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_TASK_QUEUE=token-analytics
